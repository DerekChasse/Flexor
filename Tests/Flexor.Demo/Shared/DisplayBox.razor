
<Blazorise.Card>
        @ChildContent
    <Blazorise.CardTitle>
        @this.HeaderMessage
    </Blazorise.CardTitle>
</Blazorise.Card>

@functions {

    private string minHeightStyle => $"min-height: {this.ContentMinHeight.ToString()}px";

    [Parameter]
    protected RenderFragment ChildContent { get; set; }

    [Parameter]
    protected int ContentMinHeight { get; set; } = 400;

    [Parameter]
    protected MarkupString? HeaderMessage { get; set; } = null;

    [Parameter]
    protected MarkupString? FooterMessage { get; set; } = null;
}
