<div class="shadow-lg border border-dark row mb-4">
    @if (this.HeaderMessage.HasValue)
    {

        <div class="col-12 m-0 p-0 border-bottom">
            <p class="mt-3 text-center">@this.HeaderMessage.Value</p>
        </div>
    }

    <div class="col-12 m-0 p-0" style="min-height: @this.ContentMinHeight.ToString()px">
        @ChildContent
    </div>

    @if (this.FooterMessage.HasValue)
    {

        <div class="col-12 m-0 p-0 border-top">
            <p class="mt-3 text-center">@this.FooterMessage.Value</p>
        </div>
    }
</div>

@functions {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public int ContentMinHeight { get; set; } = 400;

    [Parameter]
    public MarkupString? HeaderMessage { get; set; } = null;

    [Parameter]
    public MarkupString? FooterMessage { get; set; } = null;
}
