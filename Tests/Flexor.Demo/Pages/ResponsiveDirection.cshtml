@layout ResponsiveLayout

@page "/responsive-direction"

<DisplayBox HeaderMessage=@this.headerMessage ContentMinHeight="400">
    <FlexLayout Direction=@Direction.Is(DirectionOption.Column).OnMobile()>
        <FlexItem Size="Size.IsPercentOnAll(50)">
            <ColoredBoxFull>I'm above on mobile, and to the left on larger devices.</ColoredBoxFull>
        </FlexItem>
        <FlexItem Size="Size.IsPercentOnAll(50)">
            <ColoredBoxFull>I'm below on mobile, and to the right on larger devices.</ColoredBoxFull>
        </FlexItem>
    </FlexLayout>
</DisplayBox>

@functions {
    MarkupString headerMessage = new MarkupString("Items with responsive <strong>Direction</strong> configurations. ");
}
