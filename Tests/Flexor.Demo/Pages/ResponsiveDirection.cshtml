@layout ResponsiveLayout

@page "/responsive-direction"

<DisplayBox HeaderMessage=@this.headerMessage ContentMinHeight="400">
    <FlexLayout Direction=@Direction.Is(DirectionOption.Column).OnMobile() Class="boxes colored">
        <FlexItem Resizability="Resizability.Fill">
            I'm above on mobile, and to the left on larger devices.
        </FlexItem>
        <FlexItem Resizability="Resizability.Fill">
            I'm below on mobile, and to the right on larger devices.
        </FlexItem>
    </FlexLayout>
</DisplayBox>

@functions {
    MarkupString headerMessage = new MarkupString("Items with responsive <strong>Direction</strong> configurations. ");
}
