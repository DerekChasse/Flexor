@layout StaticLayout

@page "/static-wrap"

<DisplayBox HeaderMessage=@this.headerMessage ContentMinHeight="400">
    <FlexLine Wrap="Wrap.CanWrap" Class="boxes colored h-100 w-100">
        <FlexItem Size="Size.IsPercent(30).OnAll()" >
            30
        </FlexItem>
        <FlexItem Size="Size.IsPercent(45).OnAll()" >
            45
        </FlexItem>
        <FlexItem Size="Size.IsPercent(19).OnAll()" >
            19
        </FlexItem>
        <FlexItem Size="Size.IsPercent(33).OnAll()" >
            33
        </FlexItem>
        <FlexItem Size="Size.IsPercent(67).OnAll()" >
            67
        </FlexItem>
        <FlexItem Size="Size.IsPercent(50).OnAll()" >
            50
        </FlexItem>
        <FlexItem Resizability="Resizability.Fill">
            Fill
        </FlexItem>
    </FlexLine>

</DisplayBox>

@functions {

    MarkupString headerMessage = new MarkupString("Using <strong>Wrap</strong> to wrap positioned items within a layout container.");


}
