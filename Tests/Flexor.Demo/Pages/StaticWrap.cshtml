@layout StaticLayout

@page "/static-wrap"

<DisplayBox HeaderMessage=@this.headerMessage ContentMinHeight="400">
    <FlexLayout Wrap="Wrap.CanWrap">
        <FlexItem Size="Size.IsPercentOnAll(30)" Resizability="Resizability.None">
            <ColoredBoxFull>30</ColoredBoxFull>
        </FlexItem>
        <FlexItem Size="Size.IsPercentOnAll(45)" Resizability="Resizability.None">
            <ColoredBoxFull>45</ColoredBoxFull>
        </FlexItem>
        <FlexItem Size="Size.IsPercentOnAll(19)" Resizability="Resizability.None">
            <ColoredBoxFull>19</ColoredBoxFull>
        </FlexItem>
        <FlexItem Size="Size.IsPercentOnAll(33)" Resizability="Resizability.None">
            <ColoredBoxFull>33</ColoredBoxFull>
        </FlexItem>
        <FlexItem Size="Size.IsPercentOnAll(67)" Resizability="Resizability.None">
            <ColoredBoxFull>67</ColoredBoxFull>
        </FlexItem>
        <FlexItem Size="Size.IsPercentOnAll(50)" Resizability="Resizability.None">
            <ColoredBoxFull>50</ColoredBoxFull>
        </FlexItem>
        <FlexItem Resizability="Resizability.Fill">
            <ColoredBoxFull></ColoredBoxFull>
        </FlexItem>


    </FlexLayout>

</DisplayBox>

@functions {

    MarkupString headerMessage = new MarkupString("Using <strong>Wrap</strong> to wrap positioned items within a layout container.");


}
