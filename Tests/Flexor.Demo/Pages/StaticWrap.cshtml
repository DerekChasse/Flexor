@layout StaticLayout

@page "/static-wrap"

<DisplayBox ShowHeader="true" HeaderMessage=@this.headerMessage ContentMinHeight="400">
    <FlexLayout Wrap="Wrap.CanWrap">
        <FlexItem Size="Size.IsPercentOnAll(30)">
            <ColoredBoxFull>30</ColoredBoxFull>
        </FlexItem>
        <FlexItem Size="Size.IsPercentOnAll(45)">
            <ColoredBoxFull>45</ColoredBoxFull>
        </FlexItem>
        <FlexItem Size="Size.IsPercentOnAll(19)">
            <ColoredBoxFull>19</ColoredBoxFull>
        </FlexItem>
        <FlexItem Size="Size.IsPercentOnAll(33)">
            <ColoredBoxFull>33</ColoredBoxFull>
        </FlexItem>
        <FlexItem Size="Size.IsPercentOnAll(67)">
            <ColoredBoxFull>67</ColoredBoxFull>
        </FlexItem>
        <FlexItem Size="Size.IsPercentOnAll(50)">
            <ColoredBoxFull>50</ColoredBoxFull>
        </FlexItem>
        <FlexItem Fill="true">
            <ColoredBoxFull></ColoredBoxFull>
        </FlexItem>


    </FlexLayout>

</DisplayBox>

@functions {

    MarkupString headerMessage = new MarkupString("Using <strong>Wrap</strong> to wrap positioned items within a layout container.");
}
