@layout ResponsiveLayout

@page "/responsive-multiple-columns"

<DisplayBox HeaderMessage=@this.headerMessage ContentMinHeight="400">
    <FlexLine Class="boxes flex-fill">
        <FlexItem Size="Size.IsPercentOnAll(25)" Visible="Visible.Only.OnMobile().And.OnDesktopAndLarger()">
            <FlexLine Direction="Direction.Is(DirectionOption.Column).OnTabletAndSmaller()">
                <FlexItem Size="Size.IsPercentOnAll(50)" Class="one">
                    1
                </FlexItem>
                <FlexItem Size="Size.IsPercentOnAll(50)" Class="two">
                    2
                </FlexItem>

            </FlexLine>
        </FlexItem>
        <FlexItem Resizability="Resizability.Fill" >
            <FlexLine Direction="Direction.Column">
                <FlexItem Size="Size.IsPercentOnAll(50)" Class="three">
                    3
                </FlexItem>
                <FlexItem Size="Size.IsPercentOnAll(50)" Class="four">
                    4
                </FlexItem>
            </FlexLine>
        </FlexItem>
    </FlexLine>
</DisplayBox>

@functions {
    MarkupString headerMessage = new MarkupString("Nested columns with responsive configurations.");
}
