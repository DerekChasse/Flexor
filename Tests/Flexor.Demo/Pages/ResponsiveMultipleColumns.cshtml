@layout ResponsiveLayout

@page "/responsive-multiple-columns"

<DisplayBox HeaderMessage=@this.headerMessage ContentMinHeight="400">
    <FlexLine Class="boxes h-100 w-100">
        <FlexItem Size="Size.IsPercent(25).OnAll()" Visible="Visible.Only.OnMobile().And.OnDesktopAndLarger()">
            <FlexLine Direction="Direction.Is(DirectionOption.Column).OnTabletAndSmaller()" Class="h-100 w-100">
                <FlexItem Size="Size.IsPercent(50).OnAll()" Class="one">
                    1
                </FlexItem>
                <FlexItem Size="Size.IsPercent(50).OnAll()" Class="two">
                    2
                </FlexItem>

            </FlexLine>
        </FlexItem>
        <FlexItem Resizability="Resizability.Fill" >
            <FlexLine Direction="Direction.Column" Class="h-100 w-100">
                <FlexItem Size="Size.IsPercent(50).OnAll()" Class="three">
                    3
                </FlexItem>
                <FlexItem Size="Size.IsPercent(50).OnAll()" Class="four">
                    4
                </FlexItem>
            </FlexLine>
        </FlexItem>
    </FlexLine>
</DisplayBox>

@functions {
    MarkupString headerMessage = new MarkupString("Nested columns with responsive configurations.");
}
