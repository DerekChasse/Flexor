@layout ResponsiveLayout

@page "/responsive-visibility"

<DisplayBox HeaderMessage=@this.headerMessage>
    <FlexLayout>
        <FlexItem Visible="Visible.Only.OnTabletAndLarger()" Size="Size.IsPercentOnAll(20)">
            <ColoredBoxFull>Box #1</ColoredBoxFull>
        </FlexItem>

        <FlexItem Visible="Visible.Only.OnWidescreenAndSmaller()" Size="Size.IsPercentOnAll(20)">
            <ColoredBoxFull>Box #2</ColoredBoxFull>
        </FlexItem>

        <FlexItem Visible="Visible.Only.OnWidescreen()" Size="Size.IsPercentOnAll(20)">
            <ColoredBoxFull>Box #3</ColoredBoxFull>
        </FlexItem>

        <FlexItem Visible="Visible.When(ConditionMet)" Size="Size.IsPercentOnAll(20)">
            <ColoredBoxFull>Box #4</ColoredBoxFull>
        </FlexItem>

        <FlexItem Visible="Visible.Always" Resizability="Resizability.Fill">
            <ColoredBoxFull>Box #5</ColoredBoxFull>
        </FlexItem>

    </FlexLayout>
</DisplayBox>

<DisplayBox ContentMinHeight="80">
    <FlexLayout Direction="Direction.Column"  JustifyContent="JustifyContent.Center" ItemAlignment="AlignItems.Center">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" bind="@ConditionMet" id="conditionCheck" />
            <label class="form-check-label" for="conditionCheck">
                Conditionally
            </label>
        </div>
    </FlexLayout>
</DisplayBox>

@functions {

    private bool ConditionMet { get; set; } = false;

    MarkupString headerMessage = new MarkupString("Items with responsive <strong>Visibility</strong> configurations. ");
}
