@layout StaticLayout

@page "/static-fill"

    <DisplayBox ShowHeader="true" HeaderMessage=@this.headerMessage ContentMinHeight="400">
        <FlexLayout>
            <FlexItem Size="Size.IsPercentOnAll(30)">
                <ColoredBoxFull>30%</ColoredBoxFull>
            </FlexItem>
        
            <FlexItem Fill="true">
                <ColoredBoxFull>Fill</ColoredBoxFull>
            </FlexItem>
        </FlexLayout>

    </DisplayBox>

@functions {

    MarkupString headerMessage = new MarkupString("Using <strong>Fill</strong> to occupy remaining width and height of the parent container.");
}
