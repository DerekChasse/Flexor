@page "/"

<FlexLayout MainAxisAlignment="MainAxisAlignment.Start" CrossAxisAlignment="CrossAxisAlignment.Stretch" Visible="this.ShoudShow">

    <FlexItem Order="Order.OnDesktop(1).OnMobile(2).OnTablet(3)"> </FlexItem>

</FlexLayout>


@functions {

    bool buttonClicked = false;

    private IFluentVisible ShoudShow
    {
        get
        {
            return Visible.Only.OnDesktop().OnMobile(buttonClicked);
        }
    }


}