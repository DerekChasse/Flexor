@page "/"

<FlexLayout MainAxisAlignment="MainAxisAlignment.Start" CrossAxisAlignment="CrossAxisAlignment.Stretch" Visible="this.ShoudShow">

    <FlexItem Order="Order.OnDesktop(1).OnMobile(2).OnTablet(3)" ItemAlignment="Alignment.Item"> </FlexItem>

</FlexLayout>


@functions {

    bool buttonClicked = false;


    private IFluentAlignment Aligned
    {
        get
        {
            return Alignment.ItemsWithDefaultAlignment(ItemAxisAlignment.Start).OnDesktop(ItemAxisAlignment.Stretch);
        }
    }

    private IFluentDirection MyDirection
    {
        get
        {
            return Direction.Row.OnMobile(FlexDirection.Column);
        }
    }

    private IFluentVisible ShoudShow
    {
        get
        {
            return Visible.Only.OnDesktop().OnMobile(buttonClicked);
        }
    }
}