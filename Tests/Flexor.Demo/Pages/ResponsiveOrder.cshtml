@layout ResponsiveLayout

@page "/responsive-order"

<DisplayBox HeaderMessage=@this.headerMessage>
    <FlexLine Class="boxes colored h-100 w-100">
        <FlexItem Resizability="Resizability.Fill" Order="Order.IsFirst.OnAll()" Size="Size.IsPercent(25).OnAll()">
            Box #1
        </FlexItem>

        <FlexItem Resizability="Resizability.Fill" Order="Order.Is1.OnDesktopAndSmaller().Is3.OnWidescreenAndLarger()" Size="Size.IsPercent(25).OnAll()">
            Box #2
        </FlexItem>

        <FlexItem Resizability="Resizability.Fill" Order="Order.Is2.OnAll()" Size="Size.IsPercent(25).OnAll()">
            Box #3
        </FlexItem>

        <FlexItem Resizability="Resizability.Fill" Order="Order.Is3.OnDesktopAndSmaller().Is1.OnWidescreenAndLarger()" Size="Size.IsPercent(25).OnAll()">
            Box #4
        </FlexItem>

    </FlexLine>
</DisplayBox>

@functions {
    MarkupString headerMessage = new MarkupString("Items with responsive <strong>Order</strong> configurations. ");
}
