@layout ResponsiveLayout

@page "/responsive-order"

<DisplayBox HeaderMessage=@this.headerMessage>
    <FlexLayout Class="boxes colored">
        <FlexItem Resizability="Resizability.Fill" Order="Order.IsFirstOnAll" Size="Size.IsPercentOnAll(25)">
            Box #1
        </FlexItem>

        <FlexItem Resizability="Resizability.Fill" Order="Order.Is1.OnDesktopAndSmaller().Is3.OnWidescreenAndLarger()" Size="Size.IsPercentOnAll(25)">
            Box #2
        </FlexItem>

        <FlexItem Resizability="Resizability.Fill" Order="Order.Is2OnAll" Size="Size.IsPercentOnAll(25)">
            Box #3
        </FlexItem>

        <FlexItem Resizability="Resizability.Fill" Order="Order.Is3.OnDesktopAndSmaller().Is1.OnWidescreenAndLarger()" Size="Size.IsPercentOnAll(25)">
            Box #4
        </FlexItem>

    </FlexLayout>
</DisplayBox>

@functions {
    MarkupString headerMessage = new MarkupString("Items with responsive <strong>Order</strong> configurations. ");
}
